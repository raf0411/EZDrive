<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LoginView"
    android:layout_gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_background"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login In"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="300dp"
        android:textSize="32sp"
        android:textStyle="bold"/>

    <!-- Username Label -->
    <TextView
        android:id="@+id/usernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="16sp"
        android:layout_below="@id/backgroundImage"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="50dp"/>

    <!-- Username EditText -->
    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameLabel"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="50dp"
        android:inputType="text"
        android:background="@drawable/edittext_border"
        android:hint="e.g. AnakIlang123"/>

    <!-- Password Label -->
    <TextView
        android:id="@+id/passwordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="16sp"
        android:layout_below="@id/usernameEditText"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="50dp"/>

    <!-- Password EditText -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordLabel"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="50dp"
        android:inputType="textPassword"
        android:background="@drawable/edittext_border"
        android:hint="e.g. anakilang123"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/inputErrorText"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:textColor="#FF0000"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/passwordEditText"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="32dp"
        android:text="Log in"
        android:layout_marginHorizontal="50dp"
        android:textSize="18sp"
        android:paddingVertical="15dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        app:strokeColor="#0F0FE6"
        app:strokeWidth="2dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:textColor="#696565"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="5dp"
        android:id="@+id/toRegText"
        android:text="Don't have an account?"/>

    <TextView
        android:id="@+id/registerLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Now"
        android:textColor="#FF9900"
        android:layout_marginLeft="200dp"
        android:layout_alignBaseline="@id/toRegText"
        />

</RelativeLayout>
